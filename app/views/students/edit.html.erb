<h4>Edit Availability</h4>

<p> Student: <%= @student.full_name %> </p>
<p> Date of Birth: <%= @student.dob.strftime('%m-%d-%Y') %> </p>

<%= form_for @student do |f| %>

  <% @availabilities.each do |day| %>
    <div class="field">
      <%= f.fields_for :availabilities, day do |a| %>
      <div id ="<%= day.day %>">
        <%= a.check_box :checked %>
        <%= a.label day.day %>
        <%= a.hidden_field :day %>
        <%= a.label :start_time %>
        <%= a.time_field :start_time %>
        <%= a.label :end_time %>
        <%= a.time_field :end_time %>
      </div>
      <% end %>
    </div>
  <% end %>

  <div class= "actions">
    <%= f.submit "Update Availability" %>
  </div>
<% end %>

<%= link_to "Cancel", dashboard_index_path %>
