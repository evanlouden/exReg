<h1>
  <%= @student.first_name %>
  <%= @student.last_name %>
</h1>

<% @inquiries.each do |inquiry| %>
  <%= inquiry.instrument %> - <%= inquiry.completed ? "Completed" : "Pending" %>
  <br/>
  Availability
  <ul>
    <% inquiry.availabilities.each do |availability| %>
      <% unless availability.checked == "0" %>
        <li>
          <%= availability.day %>:
          <%= availability.start_time.strftime("%I:%M %p") %>
          -
          <%= availability.end_time.strftime("%I:%M %p") %>
        </li>
      <% end %>
    <% end %>
    <% if inquiry.completed == false %>
      <li>
        <%= link_to "Register Student", new_lesson_path(student: @student.id, inquiry: inquiry.id) %>
      </li>
    <% end %>
  </ul>
<% end %>
<%= link_to "Dashboard", admin_index_path %>
