<div class="row">
<div class="column">

<h4>New Student Inquiry</h4>

<%= form_for @student do |f| %>

  <div class= "field">
    <%= f.label :first_name, "First Name" %>
    <%= f.text_field :first_name %>
  </div>

  <div class= "field">
    <%= f.label :last_name, "Last Name" %>
    <%= f.text_field :last_name %>
  </div>

  <div class= "field">
    <%= f.label :dob, "Date of Birth" %>
    <%= f.date_field :dob %>
  </div>


  <div class= "field">
    <%= f.fields_for :inquiries do |inquiry| %>
      <%= inquiry.label :instrument %>
      <%= inquiry.text_field :instrument %>
      <%= inquiry.label :notes, "Additional Notes" %>
      <%= inquiry.text_area :notes %>
    <% end %>
  </div>

  <% @availabilities.each do |day| %>
    <div class="field">
      <%= f.fields_for :availabilities, day do |a| %>
      <div id ="<%= day.day %>">
        <%= a.check_box :checked %>
        <%= a.label day.day %>
      </div>
      <div class="row">
        <div id="time-range">
    <p>Time Range: <span class="slider-time-<%= day.day %>">10:00 AM</span> - <span class="slider-time2-<%= day.day %>">12:00 PM</span>

    </p>
    <div class="sliders_step1">
        <div id="<%= day.day %>"></div>
    </div>
</div>
      </div>
      <% end %>
    </div>
  <% end %>

  <div class= "actions">
    <%= f.submit "Submit Inquiry" %>
  </div>
<% end %>
</div>
</div>
<%= link_to "Cancel", dashboard_index_path %>
