<h1>Price Tiers</h1>
<% @prices.each do |price| %>
  <p>
    <%= price.tier_name %>,
    <%= price.duration %> minutes -
    $<%= '%.2f' % price.price %>
  </p>
<% end %>

<%= form_for @price do |f| %>
  <div class="field">
    <%= f.label :tier_name, "Tier Name"  %>
    <%= f.text_field :tier_name  %>
  </div>
  <div class="field">
    <%= f.label :duration, "Duration (minutes)" %>
    <%= f.number_field :duration %>
  </div>
  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>

  <div class= "actions">
    <%= f.submit "Create Pricing Tier" %>
  </div>
<% end %>

<%= link_to "Dashboard", admin_index_path %>
