<h3>School Settings</h3>

<div class="callout">
  <h3>Pricing Tiers <a href="#" id="add-price"><i class="fa fa-plus" aria-hidden="true"></i></a></h3>
  <% if @prices %>
    <% @prices.each do |price| %>
      <p>
        <%= price.description %>
        <%= link_to "<i class='fa fa-pencil' aria-hidden='true'></i>".html_safe, edit_price_path(price), id: "edit-price" %>
        <%= link_to "<i class='fa fa-trash-o' aria-hidden='true'></i>".html_safe, price_path(price), method: :delete, id: "delete-price" %>
      </p>
    <% end %>
  <% end %>
  <div class="hidden-submit price" id="price-form">
    <%= render partial: "prices/price_form", locals: { price: @price, button_label: "Create Pricing Tier" } %>
  </div>
</div>

<div class="callout">
  <h3>Instruments <a href="#" id="add-instrument"><i class="fa fa-plus" aria-hidden="true"></i></a></h3>
  <% if @instruments %>
    <% @instruments.each do |instrument| %>
      <p>
        <%= instrument.name %>
        <%= link_to "<i class='fa fa-pencil' aria-hidden='true'></i>".html_safe, edit_instrument_path(instrument), id: "edit-instrument" %>
        <%= link_to "<i class='fa fa-trash-o' aria-hidden='true'></i>".html_safe, instrument_path(instrument), method: :delete, id: "delete-instrument" %>
      </p>
    <% end %>
  <% end %>
  <div class="hidden-submit instrument">
    <%= render partial: "instruments/instrument_form", locals: { instrument: @instrument, button_label: "Add Instrument" } %>
  </div>
</div>

<div class="callout">
  <h3>Absence Reasons <a href="#" id="add-reason"><i class="fa fa-plus" aria-hidden="true"></i></a></h3>
  <% if @reasons %>
    <% @reasons.each do |reason| %>
      <p>
        <%= reason.reason %>
        <%= link_to "<i class='fa fa-pencil' aria-hidden='true'></i>".html_safe, edit_reason_path(reason), id: "edit-reason" %>
        <%= link_to "<i class='fa fa-trash-o' aria-hidden='true'></i>".html_safe, reason_path(reason), method: :delete, id: "delete-reason" %>
      </p>
    <% end %>
  <% end %>
  <div class="hidden-submit reason">
    <%= render partial: "reasons/reason_form", locals: { reason: @reason, button_label: "Add Reason" } %>
  </div>
</div>

<div class="callout">
  <h3>Excused Absences Allotted: <%= @count ? @count.count : "0" %> </h3>
  <% if @count.nil? %>
    <%= render partial: "admin/settings/new_excused_form", locals: { excused_absence: @excused_absence } %>
  <% else %>
    <%= render partial: "admin/settings/edit_excused_form", locals: { count: @count } %>
  <% end %>
</div>


<%= javascript_include_tag "settings" %>
