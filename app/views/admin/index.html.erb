<h1>Admin Dashboard</h1>


<h3>Open Inquiries:</h3>
<div id="admin-inquiries">
  <ul>
    <% @open_inquiries.each do |inquiry| %>
    <li>
      <%= link_to "#{inquiry.student.full_name}", inquiry_path(inquiry) %> -
      <%= inquiry.instrument %>
    </li>
    <% end %>
  </ul>
</div>

<div id="admin-attendance">
  <p>Take Attendance For:
    <%= collection_select(:teacher, :attendance, @teachers, :id, :staff_name, :include_blank => "Select a teacher") %>
  </p>
</div>
<div id="teacher-cal-dropdown">
  <p>Teacher Calendar:
    <%= collection_select(:teacher, :calendar, @teachers, :id, :staff_name, :include_blank => "Select a teacher") %>
  </p>
</div>

<div class="admin-calendar">
</div>

<div class="admin-buttons">
  <%= link_to "Save", "#", class: "button hidden-submit", id:"calendarButton" %>
  <%= link_to "Revert", "#", class: "button hidden-submit", id:"revertButton" %>
</div>

<%= javascript_include_tag "teacherShow"%>
<%= javascript_include_tag "adminCalendar"%>
