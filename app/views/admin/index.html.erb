<h1>Admin Dashboard</h1>

<h3>Open Inquiries:</h3>
<div id="admin-inquiries">
  <ul>
    <% @open_inquiries.each do |inquiry| %>
    <li>
      <%= link_to "#{inquiry.student.full_name}", student_path(inquiry.student) %> -
      <%= inquiry.instrument %>
    </li>
    <% end %>
  </ul>
</div>

<h3><%= link_to "Students", students_path %></h3>
<h3><%= link_to "Lessons", lessons_path %></h3>

<div id="admin-attendance">
  <p>Take Attendance For:
    <%= collection_select(:teacher, :attendance, @teachers, :id, :staff_name, :include_blank => "Select a teacher") %>
  </p>
</div>
<%= javascript_include_tag "teacherShow.js"%>
