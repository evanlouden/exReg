<h1>Admin Dashboard</h1>

<%= link_to "Add Teacher", new_admin_path %></br>

<h3>Teachers:</h3>
<div id="admin-teachers">
  <% @teachers.each do |teacher| %>
    <p> <%= teacher.email %> </p>
    <% if teacher.admin %>
      <p> <%= link_to "Revoke Admin", change_admin_path(teacher), method: :patch %> </p>
    <% else %>
      <p> <%= link_to "Make Admin", change_admin_path(teacher), method: :patch %> </p>
    <% end %>
  <% end %>
</div>

<h3>Admins:</h3>
<div id="admin-admins">
  <% @admins.each do |teacher| %>
    <p> <%= teacher.email %> </p>
  <% end %>
</div>

<h3>Inquiries:</h3>
<div id="admin-inquiries">
  <ul>
    <% @students.each do |student| %>
    <li>
      <%= link_to "#{student.first_name} #{student.last_name}", student_path(student) %>
      <ul>
      <% student.inquiries.where(completed: false).each do |inquiry| %>
        <li>
          <%= inquiry.instrument %> - <%= link_to "Mark Completed", complete_admin_path(inquiry), method: :patch, data: { confirm: "Mark inquiry as completed?" } %>
        </li>
      <% end %>
      </ul>
    </li></br>
    <% end %>
  </ul>
</div>

