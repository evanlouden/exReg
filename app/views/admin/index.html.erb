<h1>Admin Dashboard</h1>

<%= link_to "Add Teacher", new_admin_path %></br>

<h3>Teachers:</h3>
<div id="admin-teachers">
  <% @teachers.each do |teacher| %>
    <p> <%= teacher.email %> </p>
    <% if teacher.admin %>
      <p> <%= link_to "Revoke Admin", change_admin_path(teacher), method: :patch %> </p>
    <% else %>
      <p> <%= link_to "Make Admin", change_admin_path(teacher), method: :patch %> </p>
    <% end %>
  <% end %>
</div>

<h3>Admins:</h3>
<div id="admin-admins">
  <% @admins.each do |teacher| %>
    <p> <%= teacher.email %> </p>
  <% end %>
</div>

<h3>Open Inquiries:</h3>
<div id="admin-inquiries">
  <ul>
    <% @open_inquiries.each do |inquiry| %>
    <li>
      <%= link_to "#{inquiry.student.first_name} #{inquiry.student.last_name}", student_path(inquiry.student) %> -
      <%= inquiry.instrument %>
    </li>
    <% end %>
  </ul>
</div>

<h3>All Students:</h3>
<div id="admin-students">
  <ul>
    <% @students.each do |student| %>
    <li>
      <%= link_to "#{student.first_name} #{student.last_name}", student_path(student) %>
    </li>
    <% end %>
  </ul>
</div>

<h3><%= link_to "All Lessons", lessons_path %></h3>

<%= link_to "Pricing Tiers", prices_path %></br>
<%= link_to "Instruments Offered", instruments_path %>
