<%= form_for lesson do |f| %>
  <%= hidden_field_tag :inquiry_id, @inquiry.id %>

  <div class= "field">
    <%= f.label :instrument %>
    <%= f.select :instrument, options_from_collection_for_select(@instruments, :name, :name, selected: @inquiry.instrument ) %>
  </div>

  <div class="field">
    <%= f.label :teacher_id, "Teacher" %>
    <%= f.select :teacher_id, options_from_collection_for_select(@teachers, :id, :staff_name) %>
  </div>

  <div class="<%= @hidden %>" >
    <div class="field">
      <%= f.label :tier_name, "Pricing Tier" %>
      <%= f.select :tier_name, options_from_collection_for_select(Price.all, :id, :description) %>
    </div>
    <div class="field">
      <%= f.label :start_date, "Start Date" %>
      <%= f.date_field :start_date %>
    </div>
    <div id="dayOfWeek">Day of Week:
      <%= f.hidden_field :day %>
      <div class="field" id="dayValue">
      </div>
    </div>
    <div class="field">
      <%= f.label :start_time, "Start Time" %>
      <%= f.time_field :start_time %>
    </div>
    <div class="field">
      <%= f.label :purchased %>
      <%= f.number_field :purchased %>
    </div>

    <div class= "actions">
      <%= f.submit "Register Student"  %>
    </div>
    <% end %>
    <%= link_to "Cancel", admin_index_path %>
  </div>
