<h1>New Inquiry for <%= @student.first_name %></h1>

<%= form_for(@inquiry) do |f| %>
  <%= f.label :instrument %>
  <%= f.text_field :instrument %>
  </br>
  <%= f.label :notes, "Additional Notes" %>
  <%= f.text_area :notes %>
  <%= f.hidden_field :student_id%>
    <% @availabilities.each do |day| %>
      <div class="field">
        <%= f.fields_for :availabilities, day do |a| %>
          <div id ="<%= day.day %>">
            <%= a.check_box :checked %>
            <%= a.label day.day %>
            <%= a.hidden_field :day %>
            <%= a.label :start_time %>
            <%= a.time_field :start_time %>
            <%= a.label :end_time %>
            <%= a.time_field :end_time %>
          </div>
        <% end %>
      </div>
  <% end %>

  <div class= "actions">
    <%= f.submit "Submit New Inquiry" %>
  </div>
<% end %>

<%= link_to "Cancel", dashboard_index_path %>
