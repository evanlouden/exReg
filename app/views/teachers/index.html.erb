<h3>Teachers:</h3>
<div id="admin-teachers">
  <% @teachers.each do |teacher| %>
    <p> <%= teacher.full_name %> </p>
    <%=
     link_to_if(teacher.admin, "Revoke Admin", change_admin_path(teacher), method: :patch) do
       link_to("Make Admin", change_admin_path(teacher), method: :patch)
     end
    %></br>
    <%= link_to "Edit Availability", edit_teacher_path(teacher) %></br>
    <p> <%= link_to "Delete Teacher", teacher_path(teacher), method: :delete %> </p>
  <% end %>
</div>

<h3>Admins:</h3>
<div id="admin-admins">
  <% @admins.each do |admin| %>
    <p> <%= admin.email %> </p>
  <% end %>
</div>

<%= link_to "Dashboard", admin_index_path %>
